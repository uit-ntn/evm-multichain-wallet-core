{
  "watch": [
    "server/"
  ],
  "ext": "js,json",
  "ignore": [
    "node_modules/",
    "artifacts/",
    "cache/",
    "test/",
    "*.test.js",
    "*.spec.js",
    ".git/",
    "logs/"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000,
  "verbose": true,
  "restartable": "rs",
  "colours": true,
  "events": {
    "start": "echo 'ğŸš€ Server starting...'",
    "restart": "echo 'ğŸ”„ Server restarting due to changes...'",
    "crash": "echo 'ğŸ’¥ Server crashed - waiting for file changes before restart'"
  }
}
